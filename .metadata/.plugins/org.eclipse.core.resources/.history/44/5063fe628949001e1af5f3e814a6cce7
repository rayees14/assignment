import java.lang.*; 
import java.util.*;

//Class name with RoadToll
public class RoadToll {
	
	//Member Variables
    String TypeOfVehicle;
    int NumberOfTires;

    public RoadToll(String TypeOfVehicle, int NumberOfTires) {
        this.TypeOfVehicle = TypeOfVehicle;
        this.NumberOfTires = NumberOfTires;
        }

    public double calculateRoadToll() {
        if (NumberOfTires == 2) {
            return 0.00;
        } else if (NumberOfTires == 4) {
            return 50.00;
        } else if (NumberOfTires > 4) {
            return 100.00;
        }
        else {
        	System.out.println("Invalid");
        	return -1.00;
        }
    }

    public static void main(String[] args) {
    	
    	
    	RoadToll motorcycle = new RoadToll("Motorcycle", 2);
    	RoadToll car = new RoadToll("Car", 4);
    	RoadToll truck = new RoadToll("Truck", 4);
       
        double vehicleToll = vehicle1.calculateRoadToll();

        System.out.println("Toll for Vehicle: Rs. " + vehicleToll);
        
    }
}
